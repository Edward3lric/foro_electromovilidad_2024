---
interface Props {
  id?: string
  subtitle: string
}

const { id, subtitle } = Astro.props

/*´${id_name ? id=${id_name} : {}}´*/
---

<section {...id ? { id } : {}}>
  <h2>{subtitle}</h2>
  <slot />
</section>

<style>
  section {
    width: 100%;
    min-height: fit-content;
    padding: 1em 2em;
  }
  h2 {
    margin-bottom: 1rem;
    color: white;
    font-size: 2rem;
    font-family: 'Jersey 15', sans-serif;
    font-weight: 400;
    text-shadow: 1px 1px 2px black;
    line-height: 1;
  }

  @media (min-width: 768px) {
    section {
      padding: 1.5em 4em;
    }
    h2 {
      font-size: 2.5rem;
    }
  }
  @media (min-width: 1024px) {
    section {
      padding: 2em 6em;
    }
    h2 {
      font-size: 3rem;
    }
  }

</style>
