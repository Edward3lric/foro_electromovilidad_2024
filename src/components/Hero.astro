---
import { t } from "i18next";
---

<section class="hero relative w-full min-h-screen bg-[url('/bg_hero.webp')] bg-no-repeat bg-center bg-cover py-20 px-4 flex flex-col justify-start items-center text-white before:absolute before:top-0 before:left-0 before:w-full before:h-full z-0 before:bg-gradient-to-t before:from-gray-900/40 before:to-gray-900/40">
    <h1 class="relative z-10 text-5xl font-jersey font-normal text-center md:text-6xl lg:text-8xl" style="text-shadow: 3px 1px 2px black;">{t("title")}</h1>
    <div class="relative z-10 w-1/12 h-[2px] bg-white my-4 rounded-2xl md:w-1/6 lg:w-3/12"></div>
    <h3 class="relative z-10 text-center">{t("subtitle")}</h3>
</section>
