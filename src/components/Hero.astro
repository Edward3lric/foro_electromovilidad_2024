---
import { t } from "i18next";
---

<section class="hero before:bg-gradient-to-t before:from-gray-900/40 before:to-gray-900/40">
    <h1>{t("title")}</h1>
    <div class="separator"></div>
    <h3>{t("subtitle")}</h3>
</section>

<style>
    section.hero {
        position: relative;
        width: 100%;
        min-height: calc(100vh - 80px);
        background: url("/bg_hero.webp") no-repeat center center/cover;
        padding: 5em 1em;
        display: flex;
        flex-direction: column;
        justify-content: top;
        align-items: center;
        color: white;
    }
    section.hero::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 1;
    }
    h1 {
        position: relative;
        z-index: 2;
        font-size: 3em;
        font-family: "Jersey 15", sans-serif;
        font-weight: 400;
        font-style: normal;
        text-shadow: 3px 1px 2px black;
        line-height: 1;
        text-align: center;
    }
    .separator {
        position: relative;
        z-index: 2;
        width: 10%;
        height: 2px;
        background: white;
        margin: 1em 0;
        border-radius: 1em;
    }
    h3 {
        position: relative;
        z-index: 2;
        text-align: center;
    }

    @media (min-width: 768px) {
        h1 {
            font-size: 4em;
        }
        .separator {
            width: 20%;
        }
    }
    @media (min-width: 1024px) {
        h1 {
            font-size: 5em;
        }
        .separator {
            width: 30%;
        }
    }
</style>
