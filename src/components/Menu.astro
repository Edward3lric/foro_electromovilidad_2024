---
import { t } from "i18next";
---

<nav class="bg-[#003C43] border-b-[1px] min-h-10">
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <a href="#" class="flex max-w-32 lg:max-w-40">
      <img src="igeco_bn.webp" alt="Logo" />
      <img src="deutsche_messe_bn.webp" alt="Logo" />
    </a>
    <button
      data-collapse-toggle="navbar-default"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200"
      aria-controls="navbar-default"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="w-5 h-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="font-medium flex flex-col p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-transparent md:flex-row md:space-x-8 rtl:space-x-reverse md:mt-0 md:border-0 md:bg-transparent"
      >
        <li>
          <a
            href="#ponentes"
            class="inline-block py-2 w-fit px-3 text-white text-[1.2rem] rounded hover:bg-gray-100/10 md:hover:bg-transparent md:border-0 md:p-0 md:hover:scale-125 origin-center transition-all ease-in-out leading-5"
            aria-current="page">{t('speakers.title')}</a
          >
        </li>
        <li>
          <a
            href="#programa"
            class="inline-block py-2 w-fit px-3 text-white text-[1.2rem] rounded hover:bg-gray-100/10 md:hover:bg-transparent md:border-0 md:p-0 md:hover:scale-125 origin-center transition-all ease-in-out leading-5"
            >{t('program.title')}</a
          >
        </li>
        <li>
          <a
            href="#galeria"
            class="inline-block py-2 w-fit px-3 text-white text-[1.2rem] rounded hover:bg-gray-100/10 md:hover:bg-transparent md:border-0 md:p-0 md:hover:scale-125 origin-center transition-all ease-in-out leading-5"
            >{t('gallery.title')}</a
          >
        </li>
        <li>
          <a
            href="#registro"
            class="inline-block py-2 w-fit px-3 text-white text-[1.2rem] rounded hover:bg-gray-100/10 md:hover:bg-transparent md:border-0 md:p-0 md:hover:scale-125 origin-center transition-all ease-in-out leading-5"
            >{t('register.title')}</a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>
