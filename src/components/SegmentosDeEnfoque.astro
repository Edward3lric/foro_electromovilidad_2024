---
import Section from './Section.astro'
import { t } from 'i18next'

import { images } from '../data/constans_segmentos'
---

<Section subtitle={t('focus-segments.title')}>
  <div id='images-container'>
    {
      images.map((image, index) => (
        <div class='img' style={`background-image: url('${image.src}')`}>
          <div class="w-full h-full flex justify-start items-end bg-gradient-to-t from-gray-900/50 to-gray-900/30">
            <p class='text-center text-sm mt-2'>{t(image.text)}</p>
          </div>
        </div>
      ))
    }
  </div>
</Section>
<style>
  #images-container {
    height: calc(100% - 4em);
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    align-items: center;
    gap: 15px;
  }
  .img {
    width: 100%;
    height: 200px;
    background: center/cover;
    transition: transform ease 0.3s;
  }
  .img:hover {
    transform: scale(1.02);
  }
  .img p {
    color: white;
    width: 100%;
    padding: 15px;
    font-size: 1.2em;
    font-weight: 500;
    text-align: left;
  }
  @media (min-width: 768px) {
    .img {
      width: 48%;
    }
  }
  @media (min-width: 1024px) {
    .img {
      width: 31%;
    }
  }
</style>
