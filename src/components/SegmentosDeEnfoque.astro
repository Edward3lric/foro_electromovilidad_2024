---
import Section from './Section.astro'
import { t } from 'i18next'

import { images } from '../data/constans_segmentos'
---

<Section subtitle={t('focus-segments.title')}>
  <div id='images-container' class="flex flex-wrap justify-center items-center gap-[15px]">
    {
      images.map((image, index) => (
        <div class='w-full h-52 bg-center bg-cover transition-transform hover:scale-[1.02] md:w-[48%] lg:w-[31%]' style={`background-image: url('${image.src}')`}>
          <div class="w-full h-full flex justify-start items-end bg-gradient-to-t from-gray-900/50 to-gray-900/30">
            <p class='text-left text-base mt-2 text-white w-full p-[15px] font-medium'>{t(image.text)}</p>
          </div>
        </div>
      ))
    }
  </div>
</Section>
