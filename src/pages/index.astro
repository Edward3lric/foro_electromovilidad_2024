---
import Layout from '../layouts/Layout.astro'
import Hero from '../components/Hero.astro'
import SegmentosDeEnfoque from '../components/SegmentosDeEnfoque.astro'
import Programa from '../components/Programa.astro'
import Ponentes from '../components/Ponentes.astro'
import Section from '../components/Section.astro'
import { Gallery } from '../components/Gallery/Gallery.jsx'
import { Register } from '../components/Register/Register.jsx'
---

<Layout title='IGECO | Foro Electromovilidad'>
  <Hero />
  <main>
    <SegmentosDeEnfoque />
    <Programa />
    <Ponentes />
    <Section id='galeria' subtitle='Galeria'>
      <Gallery client:visible />
    </Section>
    <Section id="registro" subtitle="Registrate">
      <Register client:only="react" />
    </Section>
  </main>
</Layout>

